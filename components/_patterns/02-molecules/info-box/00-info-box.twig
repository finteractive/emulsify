  <div class="sg__wrapper--no-pad">
{% endif %}
  <div class="m-info-box{{ infobox_variation }}">
    <div class="m-info-box__wrapper">
      {% if infobox_title %}
        <div class="m-info-box__title">
          {% block infobox_title %}
            {{ infobox_title }}
          {% endblock %}
        </div>
      {% endif %}

      <div class="m-info-box__text">
        {% block infobox_text %}
          {{ infobox_text }}
        {% endblock %}
      </div>
    </div>
  </div>
{% if sg_wrapper %}
  </div>
{% endif %}
